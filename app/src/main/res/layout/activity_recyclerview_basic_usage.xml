<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demo.widget.recyclerview.RecyclerViewBasicUsageActivity">

    <Button
        android:id="@+id/btn_notify_data_set_changed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="notifyDataSetChanged"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbox_payload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="payload"
        app:layout_constraintBottom_toBottomOf="@id/btn_notify_data_set_changed"
        app:layout_constraintStart_toEndOf="@id/btn_notify_data_set_changed"
        app:layout_constraintTop_toTopOf="@id/btn_notify_data_set_changed" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_notify_data_set_changed" />

</androidx.constraintlayout.widget.ConstraintLayout>